rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /sharevault/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /sharevault/public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}